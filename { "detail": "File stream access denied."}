  </div>  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    function handleSubmit(e){
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));
      // Simple client-side handling: open WhatsApp with prefilled message (user can change number in href)
      const waNumber = '923328441184'; // <-- replace with your WhatsApp number (country code + number)
      const text = `Name: ${data.name}%0AFather: ${data.father || ''}%0ADOB: ${data.dob}%0ACity: ${data.city}%0APhone: ${data.phone}%0AEducation: ${data.education || ''}%0AReq: ${data.requirements || ''}%0ANotes: ${data.notes || ''}`;
      const href = `https://wa.me/${waNumber.replace(/[^0-9]/g,'')}?text=${encodeURIComponent(text)}`;
      window.open(href,'_blank');
      alert('آپ کا پیغام WhatsApp پر کھل جائے گا۔ براہِ کرم بھیج دیں — ہم جلد رابطہ کریں گے۔');
      form.reset();
    }
  </script></body>
